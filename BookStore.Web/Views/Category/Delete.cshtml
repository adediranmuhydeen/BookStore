@model Category

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2><hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DiplayOrder">Quantity</label>
            <input asp-for="DiplayOrder" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDate">Created On</label>
            <input asp-for="CreatedDate" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px"><i class="bi bi-trash3"></i></button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
            Go To List
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}