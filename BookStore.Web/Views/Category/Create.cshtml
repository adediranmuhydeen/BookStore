@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <hr />
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DiplayOrder" >Quantity</label>
            <input asp-for="DiplayOrder" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDate">Created On</label>
            <input asp-for="CreatedDate" class="form-control" />
        </div>
    </div>
</form>